                                    <Label Grid.Column="0" Grid.Row="1" Content="II" />
                                    <xctk:DecimalUpDown Name="numTWE_II" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="1" Grid.Row="1" Style="{StaticResource decUpDown}" />
                                    <Label Grid.Column="0" Grid.Row="2" Content="III" />
                                    <xctk:DecimalUpDown Name="numTWE_III" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="1" Grid.Row="2" Style="{StaticResource decUpDown}" />

                                    <Label Grid.Column="2" Grid.Row="0" Content="aVR" />
                                    <xctk:DecimalUpDown Name="numTWE_aVR" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="3" Grid.Row="0" Style="{StaticResource decUpDown}" />
                                    <Label Grid.Column="2" Grid.Row="1" Content="aVL" />
                                    <xctk:DecimalUpDown Name="numTWE_aVL" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="3" Grid.Row="1" Style="{StaticResource decUpDown}" />
                                    <Label Grid.Column="2" Grid.Row="2" Content="aVF" />
                                    <xctk:DecimalUpDown Name="numTWE_aVF" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="3" Grid.Row="2" Style="{StaticResource decUpDown}" />

                                    <Label Grid.Column="4" Grid.Row="0" Content="V1" />
                                    <xctk:DecimalUpDown Name="numTWE_V1" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="5" Grid.Row="0" Style="{StaticResource decUpDown}" />
                                    <Label Grid.Column="4" Grid.Row="1" Content="V2" />
                                    <xctk:DecimalUpDown Name="numTWE_V2" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="5" Grid.Row="1" Style="{StaticResource decUpDown}" />
                                    <Label Grid.Column="4" Grid.Row="2" Content="V3" />
                                    <xctk:DecimalUpDown Name="numTWE_V3" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="5" Grid.Row="2" Style="{StaticResource decUpDown}" />

                                    <Label Grid.Column="6" Grid.Row="0" Content="V4" />
                                    <xctk:DecimalUpDown Name="numTWE_V4" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="7" Grid.Row="0" Style="{StaticResource decUpDown}" />
                                    <Label Grid.Column="6" Grid.Row="1" Content="V5" />
                                    <xctk:DecimalUpDown Name="numTWE_V5" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="7" Grid.Row="1" Style="{StaticResource decUpDown}" />
                                    <Label Grid.Column="6" Grid.Row="2" Content="V6" />
                                    <xctk:DecimalUpDown Name="numTWE_V6" Increment="0.1" Minimum="-1.0" Maximum="1.0"
                                                        Grid.Column="7" Grid.Row="2" Style="{StaticResource decUpDown}" />
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </Expander>
                </Border>

                <!-- Group for Obstetric Profile -->
                <!-- <Border Style="{StaticResource expBorder}" IsEnabled="False"> -->
                <Expander Name="expObstetricProfile" IsExpanded="False"
                              Visibility="Hidden" Height="0"
                              Style="{StaticResource expParameters}">
                    <Expander.Header>
                        <Label Name="lblGroupObstetricProfile" Style="{StaticResource expHeader}" />
                    </Expander.Header>
                    <Grid Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Name="lblFHR" Grid.Column="0" Grid.Row="0" />
                        <xctk:IntegerUpDown Name="numFHR" Increment="5" Minimum="0" Maximum="500"
                                                Grid.Column="1" Grid.Row="0" Style="{StaticResource intUpDown}" />
                        <Label Name="lblFHRRhythms" Grid.Column="0" Grid.Row="1" />
                        <ListBox Name="listFHRRhythms" SelectionMode="Multiple"
                                     Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" />
                        <Label Name="lblFHRVariability" Grid.Column="0" Grid.Row="3" />
                        <ComboBox Name="comboFHRVariability"
                                      Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" />

                        <Label Name="lblUCFrequency" Grid.Column="0" Grid.Row="5" />
                        <xctk:IntegerUpDown Name="numUCFrequency" Increment="5" Minimum="0" Maximum="3600"
                                                Grid.Column="1" Grid.Row="5" Style="{StaticResource intUpDown}" />
                        <Label Name="lblUCDuration" Grid.Column="0" Grid.Row="6" />
                        <xctk:IntegerUpDown Name="numUCDuration" Increment="5" Minimum="0" Maximum="300"
                                                Grid.Column="1" Grid.Row="6" Style="{StaticResource intUpDown}" />
                        <Label Name="lblUCIntensity" Grid.Column="0" Grid.Row="7" />
                        <ComboBox Name="comboUCIntensity"
                                      Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="2" />
                    </Grid>
                </Expander>
                <!-- </Border> -->

                <!-- Apply and Reset Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="btnParametersReset" Click="ButtonResetParameters_Click" Style="{StaticResource btn}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource Icon_Cross_32}" Style="{StaticResource btnImage}" />
                            <Label Name="lblParametersReset" Style="{StaticResource btnLabel}" />
                        </StackPanel>
                    </Button>
                    <Button Name="btnParametersApply" Click="ButtonApplyParameters_Click" Style="{StaticResource btn}">
                        <StackPanel Orientation="Horizontal">
                            <Label Name="lblParametersApply" Style="{StaticResource btnLabel}" />
                            <Image Source="{StaticResource Icon_Check_32}" Style="{StaticResource btnImage}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>