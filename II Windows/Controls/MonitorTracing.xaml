<UserControl x:Class="II_Windows.Controls.MonitorTracing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:II_Windows.Controls"
             mc:Ignorable="d"
             SizeChanged="UpdateInterface">

	<Border Name="borderTracing" Margin="5"
                BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Canvas Name="canvasTracing" Panel.ZIndex="1" ClipToBounds="True"
                    Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                    VerticalAlignment="Stretch"
                    Background="Black"
					SizeChanged="canvasTracing_SizeChanged">
				<Path Name="drawPath" />
				<Path Name="drawReference" />
			</Canvas>

			<Label Name="lblLead" Panel.ZIndex="2" Height="Auto"
                   Margin="0" Padding="2"
                   Grid.Column="0" Grid.Row="0"
                   HorizontalAlignment="Right" />
		</Grid>
	</Border>
</UserControl>