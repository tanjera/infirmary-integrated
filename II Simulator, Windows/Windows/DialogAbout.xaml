<Window x:Class="IISIM.Windows.DialogAbout"
		x:Name="wdwDialogAbout"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:IISIM.Windows"
		mc:Ignorable="d"
		Title="Infirmary Integrated: Device Simulator"
		WindowStartupLocation="CenterScreen"
		Topmost="True"
		Icon="/Resources/Icon_II.ico"
		Height="320"
		Width="500">
	<Window.Resources>
		<Style TargetType="Label"
			   x:Key="url">
			<Setter Property="Foreground"
					Value="Blue" />
			<Setter Property="BorderBrush"
					Value="Blue" />
			<Setter Property="BorderThickness"
					Value="0, 0, 0, 1" />
		</Style>
	</Window.Resources>

	<ScrollViewer HorizontalScrollBarVisibility="Disabled"
				  VerticalScrollBarVisibility="Auto">
		<Grid Margin="10,5,50,10"
			  HorizontalAlignment="Center">

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Image Name="imgIcon"
				   Grid.Row="0"
				   Grid.Column="0"
				   Width="100"
				   Height="100"
				   Margin="10"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   Source="/Resources/Icon_II.ico" />

			<StackPanel Grid.Row="0"
						Grid.Column="1">

				<Label Name="lblInfirmaryIntegrated"
					   Margin="5"
					   Padding="5"
					   HorizontalAlignment="Left"
					   VerticalAlignment="Bottom"
					   FontSize="22"
					   FontWeight="Bold" />

				<Label Name="lblVersion"
					   Margin="5,0"
					   Padding="5,2,5,0"
					   HorizontalAlignment="Left" />

				<Label Margin="5,0"
					   Padding="5,0,5,2"
					   HorizontalAlignment="Left"
					   Content="Ibi Keller, (c) 2017-2025" />

				<TextBlock Name="tblDescription"
						   Margin="5"
						   Padding="5,2"
						   HorizontalAlignment="Left"
						   VerticalAlignment="Top"
						   TextWrapping="Wrap" />

				<Label Margin="5,5,5,0"
					   Padding="5,2,5,0"
					   HorizontalAlignment="Left"
					   Style="{StaticResource url}"
					   MouseDown="Hyperlink_Website">
					http://www.infirmary-integrated.com/
				</Label>

				<Label Margin="5,0,5,5"
					   Padding="5,0,5,2"
					   HorizontalAlignment="Left"
					   Style="{StaticResource url}"
					   MouseDown="Hyperlink_GitRepo">
					https://github.com/tanjera/infirmary-integrated
				</Label>
			</StackPanel>
		</Grid>
	</ScrollViewer>
</Window>