<Window x:Class="IISIM.Windows.DeviceMonitor"
		x:Name="wdwDeviceMonitor"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:IISIM.Windows"
		mc:Ignorable="d"
		Title="Infirmary Integrated: Device Simulator"
		Icon="/Resources/Icon_II.ico"
		Background="Black"
		Width="1200"
		Height="800">

	<Window.Resources>
		<Style TargetType="Menu">
			<Setter Property="Padding"
					Value="2" />
		</Style>

		<Style TargetType="MenuItem">
			<Setter Property="Padding"
					Value="5,2" />
			<Setter Property="Margin"
					Value="2,0" />
			<Setter Property="FontSize"
					Value="12" />
		</Style>

		<Style TargetType="Border"
			   x:Key="brd_control" />

		<Style TargetType="Button"
			   x:Key="btn_round">
			<Setter Property="HorizontalAlignment"
					Value="Stretch" />
			<Setter Property="VerticalAlignment"
					Value="Stretch" />
			<Setter Property="HorizontalContentAlignment"
					Value="Center" />
			<Setter Property="VerticalContentAlignment"
					Value="Center" />
			<Setter Property="MinHeight"
					Value="50" />
			<Setter Property="MinWidth"
					Value="60" />
			<Setter Property="Margin"
					Value="15,8" />
		</Style>

		<Style TargetType="TextBlock"
			   x:Key="tb_button">
			<Setter Property="HorizontalAlignment"
					Value="Center" />
			<Setter Property="VerticalAlignment"
					Value="Center" />
			<Setter Property="FontSize"
					Value="20" />
			<Setter Property="FontWeight"
					Value="Bold" />
			<Setter Property="Padding"
					Value="10,0" />
		</Style>

		<Style TargetType="TextBlock"
			   x:Key="tb_buttonsub">
			<Setter Property="HorizontalAlignment"
					Value="Center" />
			<Setter Property="VerticalAlignment"
					Value="Center" />
			<Setter Property="FontSize"
					Value="16" />
			<Setter Property="FontWeight"
					Value="Bold" />
		</Style>
	</Window.Resources>

	<DockPanel LastChildFill="True">

		<!--  Main Menu  -->
		<Menu DockPanel.Dock="Top">

			<MenuItem Name="menuDevice">
				<MenuItem Name="menuPauseDevice"
						  Click="MenuTogglePause_Click"
						  InputGestureText="Pause" />

				<Separator />
				<MenuItem Name="menuAddNumeric"
						  Click="MenuAddNumeric_Click"
						  InputGestureText="Ctrl+N" />
				<MenuItem Name="menuAddTracing"
						  Click="MenuAddTracing_Click"
						  InputGestureText="Ctrl+T" />

				<Separator />

				<MenuItem Name="menuToggleFullscreen"
						  Click="MenuToggleFullscreen_Click"
						  InputGestureText="Alt+Enter" />
				<Separator />
				<MenuItem Name="menuCloseDevice"
						  Click="MenuClose_Click"
						  InputGestureText="Alt+F4" />
			</MenuItem>

			<MenuItem Name="menuAlarms">

				<MenuItem Name="menuAlarmsDisable"
						  Click="MenuDisableAlarms"
						  InputGestureText="-" />
				<MenuItem Name="menuAlarmsEnable"
						  Click="MenuEnableAlarms"
						  InputGestureText="=" />
			</MenuItem>

			<MenuItem Name="menuAudio">
				<MenuItem Name="menuAudioOff"
						  Click="MenuAudioOff"
						  InputGestureText="Ctrl+P" />
				<MenuItem Name="menuAudioECG"
						  Click="MenuAudioECG"
						  InputGestureText="Ctrl+[" />
				<MenuItem Name="menuAudioSPO2"
						  Click="MenuAudioSPO2"
						  InputGestureText="Ctrl+]" />
				<Separator />
				<MenuItem Name="menuAudioDisable"
						  Click="MenuDisableAudio"
						  InputGestureText="Ctrl+-" />
				<MenuItem Name="menuAudioEnable"
						  Click="MenuEnableAudio"
						  InputGestureText="Ctrl++" />
			</MenuItem>

			<MenuItem Name="menuColor">
				<MenuItem Name="menuColorLight"
						  Click="MenuColorScheme_Light"
						  InputGestureText="F1" />
				<MenuItem Name="menuColorDark"
						  Click="MenuColorScheme_Dark"
						  InputGestureText="F2" />
			</MenuItem>
		</Menu>

		<!--  Display (tracings and numerics)  -->
		<Grid Name="displayGrid"
			  Grid.Row="0"
			  Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="4*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition />
			</Grid.RowDefinitions>

			<Grid Name="gridNumerics"
				  Grid.Column="0" />
			<Grid Name="gridTracings"
				  Grid.Column="1" />
		</Grid>
	</DockPanel>
</Window>