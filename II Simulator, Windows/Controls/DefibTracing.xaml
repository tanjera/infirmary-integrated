<UserControl x:Class="IISIM.Controls.DefibTracing"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:IISIM.Controls"
			 mc:Ignorable="d"
			 d:DesignHeight="450"
			 d:DesignWidth="800">

	<Border Name="brdTracing"
			Margin="5"
			BorderBrush="Black"
			BorderThickness="1.1"
			CornerRadius="2">

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Canvas Name="cnvTracing"
					Grid.Row="0"
					Grid.RowSpan="3"
					Grid.Column="0"
					ClipToBounds="True"
					Panel.ZIndex="1">
				<Polyline Name="plTracing" />
			</Canvas>

			<Label Name="lblLead"
				   Grid.Row="0"
				   Grid.Column="0"
				   Margin="0"
				   Padding="5"
				   HorizontalAlignment="Left"
				   Panel.ZIndex="2" />

			<Label Name="lblScaleAuto"
				   Grid.Row="0"
				   Grid.Column="0"
				   Margin="0"
				   Padding="2"
				   HorizontalAlignment="Right"
				   Panel.ZIndex="2" />

			<Label Name="lblScaleMax"
				   Grid.Row="1"
				   Grid.Column="0"
				   Margin="0"
				   Padding="2"
				   HorizontalAlignment="Right"
				   Panel.ZIndex="2" />

			<Label Name="lblScaleMin"
				   Grid.Row="3"
				   Grid.Column="0"
				   Margin="0"
				   Padding="2"
				   HorizontalAlignment="Right"
				   Panel.ZIndex="2" />
		</Grid>
	</Border>
</UserControl>