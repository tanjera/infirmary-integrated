<UserControl x:Class="IISIM.Controls.DefibNumeric"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:IISIM.Controls"
			 mc:Ignorable="d"
			 LayoutUpdated="UpdateInterface"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	<UserControl.Resources>

		<Style TargetType="Viewbox"
			   x:Key="vb_stretch">
			<Setter Property="Stretch"
					Value="Uniform" />
			<Setter Property="HorizontalAlignment"
					Value="Center" />
			<Setter Property="VerticalAlignment"
					Value="Center" />
			<Setter Property="Margin"
					Value="0" />
		</Style>

		<Style TargetType="TextBlock"
			   x:Key="tb_stretch">
			<Setter Property="Foreground"
					Value="White" />
			<Setter Property="HorizontalAlignment"
					Value="Center" />
			<Setter Property="VerticalAlignment"
					Value="Center" />
			<Setter Property="TextAlignment"
					Value="Center" />
			<Setter Property="Margin"
					Value="10,4" />
		</Style>
	</UserControl.Resources>

	<Border Name="borderNumeric"
			Margin="5"
			BorderThickness="1.1"
			CornerRadius="2">

		<Grid Name="layoutGrid">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<TextBlock Name="lblNumType"
					   Grid.Row="0"
					   Grid.Column="0"
					   Margin="5"
					   HorizontalAlignment="Left"
					   Style="{StaticResource tb_stretch}" />

			<Viewbox Grid.Row="1"
					 Grid.Column="0"
					 Style="{StaticResource vb_stretch}">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<TextBlock Name="lblLine1"
							   Style="{StaticResource tb_stretch}"
							   FontSize="36"
							   FontWeight="Bold"
							   Grid.Row="0"
							   Grid.Column="0" />

					<TextBlock Name="lblLine2"
							   Style="{StaticResource tb_stretch}"
							   FontSize="32"
							   FontWeight="Bold"
							   Grid.Row="1"
							   Grid.Column="0" />

					<TextBlock Name="lblLine3"
							   Style="{StaticResource tb_stretch}"
							   FontSize="28"
							   FontWeight="Bold"
							   Grid.Row="2"
							   Grid.Column="0" />
				</Grid>
			</Viewbox>
		</Grid>
	</Border>
</UserControl>